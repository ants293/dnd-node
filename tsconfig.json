{
  "skipLibCheck": true,
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "app/**/*",
    "server.ts"
  ],
  "exclude": ["node_modules/*", "**/*.spec.ts"]
}